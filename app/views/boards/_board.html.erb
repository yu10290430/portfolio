<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-<%= board.id %>">
    <div class="card">
      <div class="card-body">
        <div class="card-icon">
          <p><i class="fa-solid fa-map-pin fa-lg"></i></p>
        </div>
        <ul class="list-inline">
          <%= link_to user_path(board.user_id) do %>
            <li class="list-inline-item">
              <%= image_tag url_for(board.user.avatar), size: '30x30' %>
            </li>
            <li class="list-inline-item">
              <%= board.user.name %>
            </li>
          <% end %>
          <li class="list-inline-item">
            <%= l board.created_at, format: :short %>
          </li>
        </ul>
        <h5 class="card-title">
          <%= link_to board_path(board.id) do %>
            <%= board.title %>
          <% end %>
        </h5>
        <p class="card-text"><%= board.body %></p>
      </div>
    </div>
  </div>
</div>
